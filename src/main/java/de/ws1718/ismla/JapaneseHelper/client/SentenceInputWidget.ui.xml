<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .container {
            width: 60%;
            margin: auto;
        }
        .textField {
            width: 100%;
            height: 200px;
            font-family: serif;
        }
        .submitButton {
            display: block;
            margin: 15px auto !important;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.container}">
        <h3>Please input the Japanese sentence</h3>
        <g:TextArea styleName="{style.textField}" ui:field="inputField"></g:TextArea>
        <br></br>
        <g:Button styleName="{style.submitButton}" ui:field="submitButton"></g:Button>
        <g:Button styleName="{style.submitButton}" ui:field="tokenizeButton"></g:Button>
    </g:HTMLPanel>
</ui:UiBinder>
